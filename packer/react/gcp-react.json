{
  "variables": {
      "PACKER_OS_FLAVOUR": "ubuntu",
      "PACKER_BOX_NAME": "ubuntu-16.04.3-server-amd64"
    },
    "builders": [
      {
        "type": "googlecompute",
        "account_file": "../../shared/account.json",
        "project_id": "checkpoint-project",
        "source_image": "ubuntu-1604-xenial-v20180222",
        "zone": "us-central1-a",
        "image_name": "application-ubuntu-react",
        "machine_type": "n1-standard-1",
        "ssh_username": "ubuntu"
      }
  ],

  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "../scripts/update.sh"
      ]
    },
    {
    "type": "shell",
    "scripts": [
        "application-react.sh"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "compression_level": "9",
        "output": "{{.Provider}}/{{ user `PACKER_BOX_NAME` }}-appserver_{{.Provider}}.box"
      }
    ]
  ]
}
